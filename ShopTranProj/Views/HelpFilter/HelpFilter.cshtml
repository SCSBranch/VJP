@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    @*<script src="~/Scripts/HelpFilter/HelpFilter.js"></script>*@
</head>
<body>
    <form id="HelpModal" class="form-horizontal" data-role="validator" novalidate="novalidate">
        <div class="modal-header k-header" style="padding: 5px; color: black; background-color: #367FA9; border-radius: 4px">
            <button type="button" class="close" data-dismiss="modal" style="padding: 0px 8px;font-size: 25px;margin-top:10px" onclick="btn_hp_cancel()">
                &times;
            </button>
            <h4 id="Helphdr" class="k-window-title" style="margin-top:0"></h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class=" box-body ">
                        <div id="grid_condition">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class=" box-body ">
                        <div id="grid_resultset"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer" style="padding: 10px; border-top: none">
            <div style="margin-top: -15px;">
                <button class="btnUpload btn btn-primary btn-sm" type="button"id="btnTransfer" onclick="Transferdata()"> Transfer</button>
                <button class="btnUpload btn btn-primary btn-sm" type="button" id="btnSearch" onclick="getGriddata()">Search</button>
                <button class="btnUpload btn btn-primary btn-sm" type="button" id="btnClear" onclick=clearGrid();>Clear</button>
                <button class="btnUpload btn btn-primary btn-sm" type="button" onclick="btn_hp_cancel()">Cancel</button>
            </div>
        </div>
    </form>    
</body>
</html>


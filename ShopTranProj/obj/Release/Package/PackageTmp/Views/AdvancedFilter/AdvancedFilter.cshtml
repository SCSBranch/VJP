@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdvanceFilter</title>
    <script src="~/Scripts/AdvancedFilter/AdvancedFilter.js"></script>
</head>
<body>
    <div class="modal-header" style="padding: 5px; color: black; background-color: #367FA9; border-radius: 4px">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 id="advhdr" class="modal-title"></h4>
    </div>			<!-- /modal-header -->
    <div class="modal-body" style="height:300px; overflow-y:auto;">
        <div id="filter">
            <div id="gridFilter">
            </div>
        </div>
    </div>			<!-- /modal-body -->
    <div class="modal-footer">
        <div class="form-group">
            <textarea id="textserarch" class="form-control" rows="5" readonly></textarea>
        </div>
        <div class=" row">
            <div class="col-sm-4"></div>
            <div class="col-sm-6">
                <div class="col-sm-3">
                    <a href="#" class="btn btn-block btn-primary " id="btn_select" onclick="onselect_filter();" style="font-size:13px; width:70px;">
                        Select
                    </a>
                </div>
                <div class="col-sm-6">
                    <div class="col-sm-3">
                        <a href="#" class="btn btn-block btn-primary " id="btn_close" onclick="oncancel_filter();" style="font-size:13px; width:70px;">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>			<!-- /modal-footer -->
</body>
</html>
